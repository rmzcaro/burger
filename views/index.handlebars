<h1>Burgers!</h1>

<h2>Eat-da-burgers!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured!</h2>
<ul>
{{#each burgers}}
    {{#if this.devoured}}
    <li> {{this.burger_name}}
</li>
    {{/if}}
{{/each}}
</ul>


<h2>Add a Burger</h2>
<form class = "create-form">

    <div class = "form-group">
        <label for="burger01">Burger:</label>
        <input type="text" id="burger01" name="burger_name">
        <button type="submit" class= "add-burger">Add a Burger</button>

    </div>


</form>

